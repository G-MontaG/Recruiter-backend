  "scripts": {
    "preinstall": "npm i pm2 -g && pm2 install pm2-logrotate",
    "nginx-start": "sudo nginx",
    "nginx-stop": "sudo nginx -s stop",
    "nginx-quit": "sudo nginx -s quit",
    "nginx-reload": "sudo nginx -s reload",
    "nginx-reopen": "sudo nginx -s reopen",
    "nginx-ls": "ps waux | grep nginx",
    "nginx-update": "sudo cp ./nginx/dev-nginx.conf /usr/local/etc/nginx/nginx.conf",
    "swagger-update": "sudo cp ./nginx/swagger.conf /usr/local/etc/nginx/sites-available/swagger.recruiter.com.conf && sudo cp -a ./swagger/. /usr/local/var/www/swagger.recruiter.com",
    "web-update": "sudo cp ./nginx/web.conf /usr/local/etc/nginx/sites-available/recruiter.com.conf && sudo cp -a ./swagger/. /usr/local/var/www/recruiter.com",
    "nginx-test": "sudo nginx -t -c /etc/nginx/nginx.conf",
    "netstat": "netstat -Lan",
    "start-dev": "cp -R environment ./compiled && cp -R dump ./compiled && cp package.json ./compiled/package.json && cp package-lock.json ./compiled/package-lock.json && cp README.md ./compiled/README.md  && pm2 start ecosystem-dev.config.js",
    "start-debug": "cp -R environment ./compiled && cp -R dump ./compiled && cp package.json ./compiled/package.json && cp package-lock.json ./compiled/package-lock.json && cp README.md ./compiled/README.md  && pm2 start ecosystem-debug.config.js",
    "start-prod": "cp -R environment ./compiled && cp -R dump ./compiled && cp package.json ./compiled/package.json && cp package-lock.json ./compiled/package-lock.json && cp README.md ./compiled/README.md  && pm2 start ecosystem-prod.config.js --env production",
    "test-bdd": "cp -R environment ./compiled-test-bdd && cp -R environment ./compiled-test-bdd/src && mocha ./compiled-test-bdd/**/*.test.js --timeout 15000",
    "test-tdd": "cp -R environment ./compiled-test-tdd && mocha ./compiled-test-tdd/**/*.test.js --timeout 15000",
    "list": "pm2 list",
    "monit": "pm2 monit",
    "show": "pm2 show",
    "logs": "pm2 logs",
    "flush": "pm2 flush",
    "reloadLogs": "pm2 reloadLogs",
    "stop-dev": "pm2 stop ecosystem-dev.config.js",
    "stop-prod": "pm2 stop ecosystem-prod.config.js",
    "restart-dev": "pm2 restart ecosystem-dev.config.js",
    "restart-prod": "pm2 restart ecosystem-prod.config.js",
    "reload-dev": "pm2 reload ecosystem-dev.config.js",
    "reload-prod": "pm2 reload ecosystem-prod.config.js",
    "gracefulReload-dev": "pm2 gracefulReload ecosystem-dev.config.js",
    "gracefulReload-prod": "pm2 gracefulReload ecosystem-prod.config.js",
    "delete-dev": "pm2 delete ecosystem-dev.config.js",
    "delete-debug": "pm2 delete ecosystem-debug.config.js",
    "delete-prod": "pm2 delete ecosystem-prod.config.js",
    "update-dev": "pm2 update ecosystem-dev.config.js",
    "update-prod": "pm2 update ecosystem-prod.config.js",
    "swagger": "node ./compiled/build-swagger.js",
    "profiling": "NODE_ENV=production node --prof ./compiled/app.js"
  }
}
